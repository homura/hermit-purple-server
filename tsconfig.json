    },
    {
      "path": "./packages/nexus-schema"
    },
    {
      "path": "./packages/synchronizer"
    },
    {
      "path": "./packages/knex-mysql"
    },
    {
      "path": "./packages/app-sync"
    },
    {
      "path": "./packages/app-server"
    }
  ]
}
