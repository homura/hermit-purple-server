    "strict": true,
    "declaration": true,
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "composite": true,
    "baseUrl": "./packages",
    "paths": {
      "@muta-extra/*": ["./*/src"]
    }
