{
  "private": true,
  "author": "homura.dev@gmail.com",
  "license": "MIT",
  "description": "A Muta GraphQL APIs server",
  "workspaces": [
    "packages/*"
  ],
  "keywords": [
    "muta"
  ],
  "files": [
    "lib"
  ],
  "version": "0.3.0",
  "scripts": {
    "clean": "rimraf packages/**/lib ./**/*.tsbuildinfo",
    "clean:build": "rimraf packages/**/node_modules packages/**/*.js packages/**/*.d.ts",
    "build": "tsc -b",
    "test": "jest",
    "prepublishOnly": "npm run test && npm run build"
  },
  "dependencies": {
    "@types/bluebird": "^3.5.29",
    "@types/debug": "^4.1.5",
    "@types/lodash": "^4.14.149",
    "@types/lossless-json": "^1.0.0",
    "graphql": "^14.6.0"
  },
  "devDependencies": {
    "@mutadev/muta-sdk": "^0.2.0-pr374.3",
    "@types/jest": "^26.0.0",
    "@types/node": "^14.0.12",
    "cross-env": "^6.0.3",
    "graphql-markdown": "^5.2.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "schemats": "^3.0.3",
    "standard-version": "^7.1.0",
    "ts-jest": "^26.1.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --stage --partern \"packages/*/src/**/*.(js|ts)\""
    }
  }
}
