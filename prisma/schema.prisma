datasource db {
  provider = "sqlite"
  url      = "file:dev.db"
  default  = true
}

generator photon {
  provider = "photonjs"
}

model Epoch {
  id                Int           @default(autoincrement()) @id
  epochId           Int           @unique
  transactionsCount Int
  transactions      Transaction[]
  preHash           String
  timestamp         DateTime
  orderRoot         String
  // confirmRoot      String[]
  // receiptRoot      String[]
  // cyclesUsed       String[]
  stateRoot         String
  proposer          String
  proof             Proof
  validatorVersion  String
  validators        Validator[]
}

model Validator {
  id            Int     @default(autoincrement()) @id
  address       String  @unique
  proposeWeight Int
  voteWeight    Int
  epoches       Epoch[]
}

model Transaction {
  id          Int      @default(autoincrement()) @id
  txHash      String   @unique
  receipt     Receipt?
  epoch       Epoch
  serviceName String
  method      String
  payload     String
  cyclesPrice String
  cyclesLimit String
  nonce       String
  pubkey      String
  signature   String
  chainId     String
  timeout     String
}

model Receipt {
  id          Int             @default(autoincrement()) @id
  epoch       Epoch
  transaction Transaction
  cyclesUsed  String
  events      Event[]
  response    ReceiptResponse
}

model ReceiptResponse {
  id      Int     @default(autoincrement()) @id
  receipt Receipt
  ret     String
  isError Boolean
}

model Event {
  id      Int     @default(autoincrement()) @id
  receipt Receipt
  service String
  data    String
}

model Proof {
  id        Int    @default(autoincrement()) @id
  epochId   Int
  round     Int
  epochHash String
  signature String
  bitmap    String
}